@{
}


<div class="text-center">
    <h1 class="display-4">Bikes</h1>

    <div class="d-flex flex-row gap-3 flex-wrap justify-content-around align-items-center">
        @{
            if (ViewBag.Content != null)
            {
                <script>
                 window.onload(function () {
                     alert(@ViewBag.Content);
                 });
                </script>

            }
        }
        @{
            foreach (var b in Model.Bikes)
            {
                <div class="card col-4 m-1">
                    <img src="@b.Photo" class="card-img-top" alt="No picture" />
                    <div class="card-body">
                        <h2>@b.Title</h2>
                        <h3>Color: @b.Color</h3>
                        <h2>Price: @b.Price</h2>
                        <h2>Wheels: @b.WheelSize</h2>
                        <h4>@b.Info</h4>
                        <a class="btn btn-secondary" href="~/Home/Order/@b.BikeId">Buy</a>
                        <p>
                            @using (Html.BeginForm("AddToCart", "Cart"))
                            {
                                <input type="hidden" value="@b.BikeId" name="BikeId" />
                                @Html.Hidden("returnUrl", Context.Request.Path)
                                <input type="submit" value="Add to Cart" class="btn btn-secondary" />
                            }
                        </p>
                    </div>


                </div>
            }
        }
    </div>
    <input type="hidden" value="@Model.SortType" id="sort" />
    <div class="d-flex justify-content-center">
        @{
            for (int i = 1; i <= Model.Pages; i++)
            {
                <button class="btn btn-danger pageBtn">@i</button>
            }
        }
    </div>
</div>

<script type="text/javascript">
    $('.pageBtn').click(function () {

        let search = $('#searchText').val()
        let color = $('#color').val()
        let material = $('#material').val()
        let sort = $('#sort').val()
        let page = $(this).text()
        $('#bikes-list').load(`/Home/BikesList/?color=${color}&material=${material}&page=${page}&search=${search}&sortType=${sort}`)

    })
</script>