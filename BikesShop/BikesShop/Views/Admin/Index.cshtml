<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Color</th>
            <th>Price</th>
            <th>Material</th>
            <th>Wheels</th>
            <th>Info</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>


        @foreach (var b in Model)
        {
            <tr>
                <td>@b.Title</td>
                <td>@b.Color</td>
                <td>@b.Price</td>
                <td>@b.Material</td>
                <td>@b.WheelSize</td>
                <td>@b.Info</td>
                <td><a href="~/Admin/Creating/@b.BikeId" class="btn btn-warning">Edit bike</a></td>
                <td>
                    <form method="post" action="~/Admin/Delete">
                        <input type="hidden" value="@b.BikeId" name="id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </td>
            </tr>

        }

    </tbody>
</table>
<div class="d-flex flex-row flex-wrap justify-content-center">

    @{
        for (int i = 1; i <= ViewBag.Pages; i++)
        {
            <a href="~/Admin/Index/?page=@i" class="btn btn-primary mr-2">@i</a>
        }
    }

</div>