@{
}

<h1>Login</h1>
<form asp-action="Login" asp-controller="Account" asp-antiforgery="true" class="form-group d-flex">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            @Html.LabelFor(x => x.Email)
            @Html.TextBoxFor(x => x.Email, new { @class = "input-group" })
            @Html.ValidationMessageFor(x => x.Email)
        </div>
        <div>
            @Html.LabelFor(x => x.Password)
            @Html.PasswordFor(x => x.Password, new { @class = "input-group mb-2" })
            @Html.ValidationMessageFor(x => x.Password)
        </div>
        <input type="submit" value="Login" class="btn btn-primary"/>
    </div>
</form>
<a asp-controller="Account" asp-action="Register" class="btn btn-primary">Register</a>